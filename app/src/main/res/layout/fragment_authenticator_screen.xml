<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rudism.fastmail.fm.contacts.AuthenticatorActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/email_label" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputEmail"
        android:layout_below="@+id/inputEmail"
        android:layout_marginTop="15dp"
        android:text="@string/password_label" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textEmail"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textEmailAddress">
        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textPassword"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword" />


    <CheckBox
        android:id="@+id/checkboxAutoSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputPassword"
        android:layout_below="@+id/inputPassword"
        android:layout_marginTop="15dp"
        android:checked="true"
        android:text="@string/autosync_label" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkboxAutoSync"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/checkboxAutoSync"
        android:layout_marginTop="15dp"
        android:text="@string/add_btn_text" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonAdd"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonAdd"
        android:layout_marginTop="5dp"
        android:text="@string/cancel" />

</RelativeLayout>